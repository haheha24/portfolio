{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2021",
    "lib": ["es2021"],
    "moduleResolution": "node",
    "strict": true,
    "alwaysStrict": true,
    "outDir": "./dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "checkJs": true,
    "composite": true,
    "strictPropertyInitialization": true
  },
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}